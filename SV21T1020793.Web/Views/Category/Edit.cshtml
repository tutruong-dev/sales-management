@model SV21T1020793.DomainModels.Category
@{
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/Save" method="post">
            <input type="hidden" name="@nameof(Model.CategoryId)" value="@Model.CategoryId" />

            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input type="text" class="form-control" name="@nameof(Model.CategoryName)" value="@Model.CategoryName">
                @Html.ValidationMessage(nameof(Model.CategoryName))
            </div>
            <div class="form-group">
                <label>Miêu tả:</label>
                <input type="text" class="form-control" name="@nameof(Model.Description)" value="@Model.Description">
                @Html.ValidationMessage(nameof(Model.Description))
            </div>
            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-flopy-o"></i>Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">
                    Quay lại
                </a>
            </div>
            @Html.ValidationMessage("Error");
        </form>
    </div>
</div>