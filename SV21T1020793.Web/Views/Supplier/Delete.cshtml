@model SV21T1020793.DomainModels.Supplier
@{
    ViewBag.Title = "Xóa nhà cung cấp";
}
<div class="box box-danger">
    <div class="box-body">
        <form action="~/Supplier/Delete/@Model.SupplierId" method="post">
            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <p class="form-control-static form-control">@Model.SupplierName</p>
            </div>
            <div class="form-group">
                <label>Tên liên lạc:</label>
                <p class="form-control-static form-control">@Model.ContactName</p>
            </div>
            <div class="form-group">
                <label>Tỉnh/Thành:</label>
                <p class="form-control-static form-control">@Model.Provice</p>
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                <p class="form-control-static form-control">@Model.Address</p>
            </div>
            <div class="form-group">
                <label>Điện thoại:</label>
                <p class="form-control-static form-control">@Model.Phone</p>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <p class="form-control-static form-control">@Model.Email</p>
            </div>

            <div class="form-group text-right">
                @if (!SV21T1020793.BusinessLayers.CommonDataService.InUsedSupplier(Model.SupplierId))
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Xác nhận xóa
                    </button>
                }
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>
